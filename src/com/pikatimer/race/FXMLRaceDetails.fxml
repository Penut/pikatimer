<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="5.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" vgap="5.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pikatimer.race.FXMLRaceDetailsController">
  <columnConstraints>
    <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" />
    <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" />
  </columnConstraints>
  <rowConstraints>
      <RowConstraints fillHeight="false" vgrow="NEVER" />
    <RowConstraints maxHeight="1.7976931348623157E308" vgrow="ALWAYS" />
  </rowConstraints>
   <children>
      <VBox fx:id="splitsVBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="2.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
         <children>
            <Label maxHeight="-Infinity" minHeight="-Infinity" prefHeight="25.0" text="Splits" VBox.vgrow="NEVER">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TableView fx:id="raceSplitsTableView" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="250.0" prefHeight="1000.0" VBox.vgrow="ALWAYS">
              <columns>
                    <TableColumn fx:id="splitIDTableColumn" maxWidth="20" minWidth="20.0" prefWidth="20.0" text="#">
                        <cellValueFactory>
                            <PropertyValueFactory property="splitPosition" />
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn fx:id="splitNameTableColumn" prefWidth="90.0" text="Name">
                        <cellValueFactory>
                            <PropertyValueFactory property="splitName" />
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn fx:id="splitLocationTableColumn" prefWidth="90.0" text="Location">
                        <cellValueFactory>
                            <PropertyValueFactory property="timingLocation" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="splitDistanceTableColumn" prefWidth="60.0" text="Distance">
                        <cellValueFactory>
                            <PropertyValueFactory property="splitDistance" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="splitTimeTableColumn" prefWidth="50.0" text="\% Time">
                        <cellValueFactory>
                            <PropertyValueFactory property="splitTime" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="splitCutoffTableColumn" prefWidth="75.0" text="Cutoff">
                        <cellValueFactory>
                            <PropertyValueFactory property="splitCutoffString" />
                        </cellValueFactory>
                    </TableColumn>
                  
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               
            </TableView>
            <HBox fillHeight="false" spacing="5.0">
               <children>
                  <Button fx:id="addSplitButton" mnemonicParsing="false" onAction="#addSplit" text="Add" />
                  <Button fx:id="deleteSplitButton" mnemonicParsing="false" onAction="#deleteSplit" text="Delete" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </VBox>
      <VBox fx:id="waveStartsVBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="2.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="TOP" GridPane.vgrow="ALWAYS">
         <children>
            <Label maxHeight="-Infinity" minHeight="-Infinity" prefHeight="25.0" text="Start Waves" VBox.vgrow="NEVER">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TableView fx:id="waveStartsTableView" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="250.0" prefHeight="1000.0" VBox.vgrow="ALWAYS">
               <columns>
                    <!-- <TableColumn fx:id="wavePositionTableColumn" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="19.0" text="#">
                        <cellValueFactory>
                            <PropertyValueFactory property="wavePosition" />
                        </cellValueFactory>
                    </TableColumn> -->

                    <TableColumn fx:id="waveNameTableColumn" prefWidth="75.0" text="Name">
                        <cellValueFactory>
                            <PropertyValueFactory property="waveName" />
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn fx:id="waveStartTimeTableColumn" prefWidth="75.0" text="Start Time">
                        <cellValueFactory>
                            <PropertyValueFactory property="waveStartString" />
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn fx:id="waveMaxStartTimeTableColumn" prefWidth="75.0" text="Max Start">
                        <cellValueFactory>
                         <PropertyValueFactory property="waveMaxStartString" />
                        </cellValueFactory>
                    </TableColumn>
                  <TableColumn prefWidth="150.0" text="Assignments">
                     <columns>
                              <TableColumn fx:id="waveAssignmentMethodTableColumn" prefWidth="60.0" text="Method">
                                  <cellValueFactory>
                                   <PropertyValueFactory property="waveAssignmentMethod" />
                                  </cellValueFactory>
                              </TableColumn>
                              <TableColumn fx:id="waveAssignmentStartTableColumn" minWidth="6.0" prefWidth="45.0" text="Start">
                                  <cellValueFactory>
                                   <PropertyValueFactory property="waveAssignmentStart" />
                                  </cellValueFactory>
                              </TableColumn>
                              <TableColumn fx:id="waveAssignmentEndTableColumn" prefWidth="45.0" text="End">
                                  <cellValueFactory>
                                   <PropertyValueFactory property="waveAssignmentEnd" />
                                  </cellValueFactory>
                              </TableColumn>
                     </columns>
                       
                  </TableColumn>
                        
               </columns>
                <sortOrder> 
                    <fx:reference source="waveStartTimeTableColumn" />
               </sortOrder>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER_LEFT" fillHeight="false" spacing="5.0" VBox.vgrow="NEVER">
               <children>
                  <Button fx:id="addWaveButton" mnemonicParsing="false" onAction="#addWave" text="Add" />
                  <Button fx:id="deleteWaveButton" mnemonicParsing="false" onAction="#deleteWave" text="Delete" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </VBox>
      <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="TOP" GridPane.vgrow="NEVER">
         <children>
            <CheckBox fx:id="waveStartsCheckBox" mnemonicParsing="false" text="Wave Starts">
               <font>
                  <Font size="14.0" />
               </font>
            </CheckBox>
            <HBox alignment="CENTER_LEFT" fillHeight="false" spacing="5.0">
               <children>
                  <CheckBox fx:id="splitsCheckBox" mnemonicParsing="false" text="On-Course Splits">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </CheckBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="5.0" GridPane.columnIndex="1" GridPane.valignment="CENTER" VBox.vgrow="NEVER">
               <children>
                  <Button fx:id="courseRecordsButton" mnemonicParsing="false" onAction="#setupCourseRecords" text="Course Records" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button fx:id="ageGroupSetupButton" mnemonicParsing="false" onAction="#setupAgeGroups" text="Age Group Setup" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button fx:id="awardSetupButton" mnemonicParsing="false" onAction="#setupAwards" text="Award Setup" />
               </children>
               <padding>
                  <Insets top="25.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
      <VBox maxHeight="-Infinity" minHeight="-Infinity" spacing="5.0" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.valignment="TOP" GridPane.vgrow="NEVER">
         <children>
            <HBox fx:id="raceNameHBox" alignment="CENTER_LEFT" fillHeight="false" spacing="5.0">
               <children>
                  <Label prefHeight="20.0" prefWidth="90.0" text="Race Name">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="raceNameTextField" onAction="#updateRaceName" HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets right="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" fillHeight="false" spacing="5.0">
               <children>
                  <Label prefHeight="20.0" prefWidth="90.0" text="Distance">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="raceDistanceTextField" onAction="#updateRaceDistance" prefWidth="75.0" />
                  <ChoiceBox fx:id="distanceUnitChoiceBox" onInputMethodTextChanged="#updateRaceDistance" />
               </children>
            </HBox>
            <HBox fx:id="startTimeHBox" alignment="CENTER_LEFT" fillHeight="false" spacing="5.0">
               <children>
                  <Label prefWidth="90.0" text="Start Time">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="raceStartTimeTextField" onAction="#updateRaceStartTime" prefHeight="25.0" prefWidth="96.0" promptText="HH:MM:SS.sss" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" fillHeight="false" spacing="5.0" VBox.vgrow="NEVER">
               <children>
                  <Label prefHeight="20.0" prefWidth="90.0" text="Cutoff Time">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="raceCutoffTimeTextField" prefWidth="75.0" promptText="HH:MM" />
                  <Label fx:id="raceCutoffTimePaceLabel" prefHeight="20.0" prefWidth="90.0">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </VBox>
   </children>
</GridPane>
