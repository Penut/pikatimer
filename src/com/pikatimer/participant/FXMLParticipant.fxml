<GridPane alignment="CENTER" hgap="10.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" vgap="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pikatimer.participant.FXMLParticipantController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
   <children>
      <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="10.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER">
         <children>
             <Label style="-fx-font: NORMAL 20 Tahoma;" text="Search" GridPane.columnIndex="0" GridPane.rowIndex="0" HBox.hgrow="NEVER">
               <padding>
                  <Insets left="5.0" />
               </padding></Label>
            <TextField fx:id="filterField" maxWidth="1.7976931348623157E308" prefHeight="25.0" prefWidth="200.0" promptText="Regex capable search filter" HBox.hgrow="NEVER" />
            <Region maxWidth="1.7976931348623157E308" prefHeight="25.0" prefWidth="125.0" HBox.hgrow="ALWAYS" />
            <Label fx:id="filteredSizeLabel" text="Label" textAlignment="RIGHT" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets right="-10.0" />
               </HBox.margin>
            </Label>
            <Label text="/" HBox.hgrow="NEVER" />
            <Label fx:id="listSizeLabel" alignment="CENTER" text="Label" HBox.hgrow="NEVER">
               <HBox.margin>
                  <Insets left="-10.0" />
               </HBox.margin>
            </Label>
         </children>
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </GridPane.margin>
      </HBox>
       <TableView fx:id="tableView" tableMenuButtonVisible="true" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
           <columns>
               <TableColumn fx:id="bibNumberColumn" prefWidth="49.0" resizable="false" text="Bib #">
                 <cellValueFactory>
                     <PropertyValueFactory property="bib" />
                 </cellValueFactory>
             </TableColumn>
             <TableColumn fx:id="firstNameColumn" prefWidth="71.0" text="First Name">
                 <cellValueFactory>
                     <PropertyValueFactory property="firstName" />
                 </cellValueFactory>
             </TableColumn>
             <TableColumn fx:id="lastNameColumn" prefWidth="100" text="Last Name">
                 <cellValueFactory>
                     <PropertyValueFactory property="lastName" />
                 </cellValueFactory>
             </TableColumn>
             <TableColumn fx:id="ageColumn" prefWidth="32.0" text="Age">
                 <cellValueFactory>
                     <PropertyValueFactory property="age" />
                 </cellValueFactory>
             </TableColumn>
             <TableColumn fx:id="sexColumn" minWidth="8.0" prefWidth="32.0" text="Sex">
                 <cellValueFactory>
                     <PropertyValueFactory property="sex" />
                 </cellValueFactory>
             </TableColumn>
             <TableColumn fx:id="cityColumn" prefWidth="60.0" text="City">
                 <cellValueFactory>
                     <PropertyValueFactory property="city" />
                 </cellValueFactory>
             </TableColumn>
             <TableColumn fx:id="stateColumn" prefWidth="41.0" text="State">
                 <cellValueFactory>
                     <PropertyValueFactory property="state" />
                 </cellValueFactory>
             </TableColumn>
            <TableColumn prefWidth="169.0" text="Email Address" visible="false">
                 <cellValueFactory>
                     <PropertyValueFactory property="email" />
                 </cellValueFactory>
             </TableColumn>
        </columns>  
        <sortOrder> 
             <fx:reference source="bibNumberColumn" />
             <fx:reference source="lastNameColumn" />
        </sortOrder>
       </TableView>
      <GridPane GridPane.rowIndex="1" GridPane.rowSpan="2147483647">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <VBox fx:id="formVBox" spacing="5.0">
               <children>
                  <HBox spacing="5.0">
                     <children>
                        <TextField fx:id="bibTextField" promptText="Bib #" HBox.hgrow="ALWAYS" />
                        <CheckComboBox fx:id="waveComboBox" prefWidth="150.0" />
                     </children>
                  </HBox>
                  <TextField fx:id="firstNameField" prefWidth="90" promptText="First Name" />
                  <TextField fx:id="middleNameTextField" prefWidth="90" promptText="Middle Name / Initial" />
                  <TextField fx:id="lastNameField" prefWidth="90" promptText="Last Name" />
                  <HBox spacing="5.0">
                     <children>
                        <TextField fx:id="ageTextField" promptText="Age" />
                        <TextField fx:id="sexTextField" prefHeight="25.0" prefWidth="70.0" promptText="Sex" />
                     </children>
                  </HBox>
                  <HBox spacing="5.0">
                     <children>
                        <TextField fx:id="cityTextField" prefHeight="25.0" prefWidth="228.0" promptText="City" />
                        <TextField fx:id="stateTextField" promptText="State" />
                     </children>
                  </HBox>
                        <TextField fx:id="emailField" onAction="#addPerson" prefWidth="150" promptText="Email" />
                  <HBox spacing="5.0">
                      <children>
                        <Button fx:id="formAddButton" onAction="#addPerson" text="Add" />
                        <Button fx:id="formUpdateButton" managed="false" onAction="#updateParticipant" text="Update" visible="false" />
                        <Button fx:id="formResetButton" onAction="#resetForm" text="Reset" />
                      </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </GridPane>
      <HBox spacing="5.0" GridPane.hgrow="NEVER">
         <children>
            <Button fx:id="importButton" focusTraversable="false" mnemonicParsing="false" onAction="#importParticipants" prefHeight="25.0" prefWidth="60.0" text="Import" textAlignment="CENTER" />
            <Button fx:id="exportButton" mnemonicParsing="false" onAction="#exportParticipants" prefWidth="60.0" text="Export" />
            <Button fx:id="clearButton" focusTraversable="false" mnemonicParsing="false" onAction="#clearParticipants" prefWidth="60.0" text="Clear" textAlignment="CENTER" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </children>
   <columnConstraints>
      <ColumnConstraints maxWidth="200.0" minWidth="200.0" prefWidth="200.0" />
      <ColumnConstraints minWidth="300.0" prefWidth="500.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   
      
